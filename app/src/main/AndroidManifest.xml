<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="ru.bokhonin.lexicon">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name=".presenter.MainActivity"
                android:label="@string/app_name"
                android:theme="@style/AppTheme"
                android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".presenter.TrainingActivity"
                android:label="Карточки">
        </activity>
        <activity
                android:name=".presenter.SettingsActivity"
                android:label="Настройки">
        </activity>
        <activity
                android:name=".presenter.StatisticActivity"
                android:label="Статистика">
        </activity>
        <activity android:name=".presenter.DetailActivity">
        </activity>
    </application>

</manifest>