<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="ru.bokhonin.lexicon.presenter.MainActivity$PlaceholderFragment">

    <TextView
            android:id="@+id/section_label"
            android:text="History"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button"
            android:layout_alignBaseline="@+id/button2" android:layout_alignBottom="@+id/button2"
            android:layout_toEndOf="@+id/section_label"/>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button2"
            android:layout_marginStart="16dp"
            android:layout_marginTop="92dp" android:layout_below="@+id/section_label"
            android:layout_toEndOf="@+id/button"/>

</RelativeLayout>
