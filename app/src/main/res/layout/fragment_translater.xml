<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:padding="4dp"
                                             tools:context="ru.bokhonin.lexicon.presenter.MainActivity$TranslaterFragment">

    <ImageButton
            style="@style/ImageButtonClear"
            android:id="@+id/btn_clear"
            app:srcCompat="@mipmap/ic_del"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintTop_toTopOf="@+id/btn_translate"
            app:layout_constraintRight_toLeftOf="@+id/btn_translate" android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintBottom_toBottomOf="@+id/btn_translate"/>

    <EditText
            style="@style/InputWord"
            android:id="@+id/source_word"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/word_hint"

            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/btn_clear"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp" android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>



    <Button
            android:id="@+id/btn_translate"
            android:text="Перевод"
            android:layout_width="88dp"
            android:layout_height="0dp"
            tools:layout_constraintRight_creator="1"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="12dp"
            app:layout_constraintDimensionRatio="h,2:1"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="8dp"/>


    <TextView
            style="@style/TranslatedWord"
            android:id="@+id/translated_word"
            android:layout_width="0dp"
            android:layout_height="96dp"
            tools:layout_constraintTop_creator="1"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/source_word"
            app:layout_constraintLeft_toLeftOf="@+id/source_word"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            />
    <ImageButton
            style="@style/ImageButtonAdd"
            android:layout_width="24dp"
            android:layout_height="32dp"
            app:srcCompat="@mipmap/ic_bookmark_border"
            android:id="@+id/btn_bookmark"
            android:layout_marginRight="16dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_translate"/>


</android.support.constraint.ConstraintLayout>
