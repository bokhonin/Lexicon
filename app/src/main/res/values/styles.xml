<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. parent="Theme.AppCompat.Light.DarkActionBar"-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppThemeMaterial" parent="android:Theme.Material.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppThemeMaterial.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>




    <!-- EditText, TextView -->
    <style name="InputWord">
        <item name="android:textSize">20sp</item>
        <item name="android:alpha">.54</item>
        <!-- <item name="android:layout_marginLeft">4dp</item>-->
        <!-- <item name="android:layout_marginTop">16dp</item>-->
</style>

<style name="TranslatedWord">
    <item name="android:textSize">28sp</item>
    <item name="android:gravity">center_vertical|center_horizontal</item>
    <!-- <item name="android:padding">4dp</item>-->
</style>


<!-- Button -->
    <style name="ImageButtonAdd" parent="Base.Widget.AppCompat.ImageButton">
        <item name="android:alpha">.30</item>
        <item name="android:background">@drawable/button_display</item>
        <item name="android:layout_marginTop">32dp</item>
    </style>

    <style name="ImageButtonClear" parent="Base.Widget.AppCompat.ImageButton">
        <item name="android:alpha">.12</item>
        <item name="android:background">@drawable/button_display</item>
    </style>


</resources>
